package textDocBuilder.factories;

import textDocBuilder.domain.Font;
import textDocBuilder.enums.FontSizes;
import textDocBuilder.enums.FontTypes;

public class ConcreteFontFactory extends AbstractFontFactory
{

	private FontSizes size;
	private FontTypes type;

	public ConcreteFontFactory(FontSizes size, FontTypes type)
	{
		this.size = size;
		this.type = type;
	}

	@Override
	protected int getFontSize()
	{
		switch (this.size)
		{
		case SMALL:
			return 1;
		case MEDIUM:
			return 2;
		case LARGE:
			return 3;
		default:
			break;
		}
		return 0;
	}

	@Override
	protected Font getFont(Font font)
	{
		// TODO Auto-generated method stub
		return null;
	}

}
