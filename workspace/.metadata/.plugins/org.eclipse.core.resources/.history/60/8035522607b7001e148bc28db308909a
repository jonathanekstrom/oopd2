package models;

public class Board
{
	private Square[][] squareLayout = new Square[8][8];

	public Board()
	{
		for (int i = 0; i < 8; i++)
		{
			for (int j = 0; j < 8; j++)
			{
				if (j % 2 == 0)
				{
					squareLayout[i][j] = new Square("black");
				}
				else
				{
					squareLayout[i][j] = new Square("white");
				}
			}
		}
	}

	private void initBoard()
	{

	}
}
