package factories;

import elements.*;
import interfaces.ElementTypes;
import interfaces.IElement;
import textDocBuilder.elements.Heading;
import textDocBuilder.elements.List;
import textDocBuilder.elements.Paragraph;
import textDocBuilder.elements.Table;

public class ConcreteElementFactory extends AbstractElementFactory
{

	@Override
	protected IElement getElement(ElementTypes type)
	{
		switch (type)
		{
		case PARAGRAPH:
			return new Paragraph();
		case HEADING:
			return new Heading();
		case TABLE:
			return new Table();
		case LIST:
			return new List();
		default:
			break;
		}

		return null;
	}

}
