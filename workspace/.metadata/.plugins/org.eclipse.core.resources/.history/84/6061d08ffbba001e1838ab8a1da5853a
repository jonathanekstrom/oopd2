package classes;

import java.util.ArrayList;
import java.util.List;

import interfaces.ITextComponent;

public class Document implements ITextComponent
{

	private List<ITextComponent> components = new ArrayList<>();

	public void addComponent(ITextComponent component)
	{
		components.add(component);
	}

	@Override
	public void render()
	{
		for (ITextComponent component : components)
		{
			component.render();
		}
	}

}
